
@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Hakkımızda</h1>
</div><!-- End Page Title -->
<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#verticalycentered">
    Ekle
</button>

<div class="modal fade" id="verticalycentered" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Hakkımızda Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form action="/Admin/HakkimizdaEkle" method="post" enctype="multipart/form-data">

                <div class="modal-body">
                    <label>Resim (Tasarımın bozulmaması için yüklediğiniz tüm resimler aynı boyutta olmalıdır örnek 600x600 pixel)</label>
                    <input type="file" name="Resim" id="Resim" class="form-control" required />

                    <br />
                    <label>Türkçe Açıklama</label>

                    <textarea id="Aciklama_tr" class="alan" name="Aciklama_tr" required></textarea>

                    <br />
                    <label>İngilizce Açıklama</label>
                    <textarea id="Aciklama_en" class="alan" name="Aciklama_en" required></textarea>

                    <br />
                    <label>Almanca Açıklama</label>
                    <textarea id="Aciklama_de" class="alan" name="Aciklama_de" required></textarea>

                </div>
                <div class="modal-footer">

                    <button type="submit" class="btn btn-success">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div><!-- End Vertically centered Modal-->
<div class="card-body">
    <h5 class="card-title">Hakkımızda Listesi</h5>
    <div class="table-responsive">
        <table class="table table-borderless table-hover table-striped  datatable">
            <thead>
                <tr>

                    <th scope="col">Resim</th>
                    <th scope="col">Türkçe Açıklama</th>
                    <th scope="col">Almanca Açıklama</th>
                    <th scope="col">İngilizce Açıklama</th>

                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Hakkimizda)
                {

                    <tr>

                        <td><img src="@item.Resim" class="w-25" /></td>
                        <td>@Html.Raw(item.Aciklama_tr)</td>
                        <td>@Html.Raw(item.Aciklama_de)</td>
                        <td>@Html.Raw(item.Aciklama_en)</td>
                   



                        <td>
                            <a href="/Admin/HakkimizdaGuncelle/@item.ID" class="badge bg-warning">Düzenle</a> | <a href="/Admin/HakkimizdaSil/@item.ID"
                                                                                                                     class="badge bg-danger"
                                                                                                                     onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?');">
                                Sil
                            </a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

