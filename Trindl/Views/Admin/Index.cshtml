
@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Ana Sayfa</h1>
    
</div><!-- End Page Title -->

<br />
<section class="section dashboard">


    <!-- Left side columns -->

    <div class="row">

        <!-- Sales Card -->
        <div class="col-md-6">
            <div class="card info-card sales-card">



                <div class="card-body">
                    <h5 class="card-title">Toplam Ürün Sayısı</h5>

                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                            <i class="bi bi-cart"></i>
                        </div>
                        <div class="ps-3">

                            <h6>@ViewBag.UrunSayi</h6>


                        </div>
                    </div>
                </div>

            </div>
        </div><!-- End Sales Card -->


        <div class="col-md-6">
            <div class="card info-card sales-card">



                <div class="card-body">
                    <h5 class="card-title">Toplam Yetkili Sayısı</h5>

                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div class="ps-3">
                            <h6>@ViewBag.YetkiliSayi</h6>


                        </div>
                    </div>
                </div>

            </div>
        </div><!-- End Sales Card -->


        <div class="col-md-6">
            <div class="card info-card sales-card">



                <div class="card-body">
                    <h5 class="card-title">Toplam Okunmuş Mesaj Sayısı</h5>

                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                            <i class="bi bi-chat-dots-fill"></i>
                        </div>
                        <div class="ps-3">
                            <h6>@ViewBag.OkunmusMesajSayi</h6>


                        </div>
                    </div>
                </div>

            </div>
        </div><!-- End Sales Card -->


        <div class="col-md-6">
            <div class="card info-card sales-card">



                <div class="card-body">
                    <h5 class="card-title">Toplam Okunmamış Mesaj Sayısı</h5>

                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                            <i class="bi bi-chat-dots-fill"></i>
                        </div>
                        <div class="ps-3">
                            <h6>@ViewBag.OkunmamisMesajSayi</h6>


                        </div>
                    </div>
                </div>

            </div>
        </div><!-- End Sales Card -->


        <div class="col-md-12">
            <div class="card info-card sales-card">



                <div class="card-body">
                    <h5 class="card-title">Toplam Mesaj Sayısı</h5>

                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                            <i class="bi bi-chat-dots-fill"></i>
                        </div>
                        <div class="ps-3">
                            <h6>@ViewBag.TumMesajSayi</h6>


                        </div>
                    </div>
                </div>

            </div>
        </div><!-- End Sales Card -->

    </div>



</section>



