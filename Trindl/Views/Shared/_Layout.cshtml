<!DOCTYPE html>
<html lang="en">


<head>
    @{
        string dil = "de"; // Varsayılan dil


        // Çerezden dil bilgisini al ve kontrol et
        if (Request.Cookies["D"] != null && !string.IsNullOrEmpty(Request.Cookies["D"]["Dil"]))
        {
            dil = Request.Cookies["D"]["Dil"];
        }


    }

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    @if (dil == "tr")
    {
        <title>Toptan Dirndl</title>

    }
    else if (dil == "en")
    {
        <title>Wholesale  Dirndl</title>

    }
    else
    {
        <title>Grosshandel Dirndl</title>

    }
    <meta name="description" content="Geleneksel Alman dirndl elbiseleri, Türk, Alman ve 
          İngiliz vatandaşları için özenle tasarlandı. Traditional German dirndl dresses crafted 
          for Turkish, German, and English citizens. Traditionelle deutsche Dirndl-Kleider, speziell
          für türkische, deutsche und englische Bürger entworfen.">

    <meta name="keywords" content="dirndl, dirndl elbiseleri, geleneksel Alman kıyafetleri, 
          Oktoberfest kıyafetleri, high-quality dirndl dresses, traditional German clothing, 
          hochwertige Dirndl Kleider, traditionelle deutsche Trachten, dirndl Türkiye, dirndl 
          İngiltere, dirndl Almanya">


    <!-- Favicons -->
    <link href="~/Content/site/assets/img/favicon.png" rel="icon">
    <link href="~/Content/site/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/site/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/site/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/site/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/site/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/site/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/Content/site/assets/css/main.css" rel="stylesheet">

</head>



<body class="index-page">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <header id="header" class="header d-flex flex-column justify-content-center">

        <i class="header-toggle d-xl-none bi bi-list"></i>

        <nav id="navmenu" class="navmenu">
            <ul>

                @if (dil == "tr")
                {
                    <li><a href="/Home/#hero" class="active"><i class="bi bi-house navicon"></i><span>Ana Sayfa</span></a></li>
                    <li><a href="/Home/#about"><i class="bi bi-person navicon"></i><span>Hakkımızda</span></a></li>
                    <li><a href="/Home/#portfolio"><i class="bi bi-images navicon"></i><span>Ürünlerimiz</span></a></li>
                    <li><a href="/Home/#services"><i class="bi bi-hdd-stack navicon"></i><span>Hizmetler</span></a></li>
                    <li><a href="/Home/#contact"><i class="bi bi-envelope navicon"></i><span>İletişim</span></a></li>
                }
                else if (dil == "en")
                {
                    <li><a href="/Home/#hero" class="active"><i class="bi bi-house navicon"></i><span>Home</span></a></li>
                    <li><a href="/Home/#about"><i class="bi bi-person navicon"></i><span>About</span></a></li>
                    <li><a href="/Home/#portfolio"><i class="bi bi-images navicon"></i><span>Portfolio</span></a></li>
                    <li><a href="/Home/#services"><i class="bi bi-hdd-stack navicon"></i><span>Services</span></a></li>
                    <li><a href="/Home/#contact"><i class="bi bi-envelope navicon"></i><span>Contact</span></a></li>
                }
                else
                {
                    <li><a href="/Home/#hero" class="active"><i class="bi bi-house navicon"></i><span>Startseite</span></a></li>
                    <li><a href="/Home/#about"><i class="bi bi-person navicon"></i><span>Über mich</span></a></li>
                    <li><a href="/Home/#portfolio"><i class="bi bi-images navicon"></i><span>Portfolio</span></a></li>
                    <li>
                        <a href="/Home/#services">
                            <i class="bi bi-hdd-stack navicon"></i><span>
                                Dienstleistungen
                            </span>
                        </a>
                    </li>
                    <li><a href="/Home/#contact"><i class="bi bi-envelope navicon"></i><span>Kontakt</span></a></li>

                }

                <li><a href="/Home/Dil/1"><img width="25" height="25" src="https://img.icons8.com/color/48/great-britain-circular.png" alt="great-britain-circular" /><span> English</span></a></li>
                <li><a href="/Home/Dil/2"><img width="25" height="25" src="https://img.icons8.com/color/48/germany-circular.png" alt="germany-circular" /> <span> Deutsch</span></a></li>
                <li><a href="/Home/Dil/3"><img width="25" height="25" src="https://img.icons8.com/fluency/48/turkey-circular.png" alt="turkey-circular" /> <span>Türkçe</span></a></li>
            </ul>
        </nav>

    </header>


    <main class="main">
        @RenderBody()
    </main>
    <footer id="footer" class="footer position-relative light-background">

        <div class="container">
            <div class="copyright">
                <span>Copyright</span> <strong class="px-1 sitename">
    <img src="~/Content/site/assets/img/logo.png" width="150" />
 Grosshandel Dirndl
</strong> <span>All Rights Reserved</span>
            </div>
            <div class="credits">

                Designed by <a href="https://bugrasoft.com/">Bugrasoft</a>
            </div>
        </div>

    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <a href="https://wa.me/@(ViewBag.Whatsapp)?text=" class="btn btn-success whatsapp-button" target="_blank" title="WhatsApp">
        <i class="bi bi-whatsapp"></i>
    </a>
    <!-- Preloader -->
    <div id="preloader"></div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
$(document).ready(function() {
    @if (TempData["Hata"] != null)
    {
         if (dil == "tr")
         {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'HATA!',
                    text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Hata"].ToString()))'
                });
            </text>
         }
         else if (dil == "en")
         {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Hata"].ToString()))'
                });
            </text>
         }
         else
         {

            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Fehler!',
                    text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Hata"].ToString()))'
                });
            </text>
         }

    }

    @if (TempData["Basarili"] != null)
    {
         if (dil == "tr")
         {

        <text>
            Swal.fire({
                icon: 'success',
                title: 'Başarılı!',
                text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Basarili"].ToString()))'
            });
        </text>
         }
         else if (dil == "en")
         {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Basarili"].ToString()))'
                });
            </text>
        }
        else
        {
         <text>
             Swal.fire({
                 icon: 'success',
                 title: 'Erfolg!',
                 text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["Basarili"].ToString()))'
             });
         </text>
        }


    }
});


    </script>

    <!-- Vendor JS Files -->
    <script src="~/Content/site/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/site/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/site/assets/vendor/aos/aos.js"></script>
    <script src="~/Content/site/assets/vendor/typed.js/typed.umd.js"></script>
    <script src="~/Content/site/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Content/site/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/Content/site/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Content/site/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/site/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Content/site/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/Content/site/assets/js/main.js"></script>

</body>

</html>